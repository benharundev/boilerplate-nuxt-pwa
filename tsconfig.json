{
    "extends": "./.nuxt/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "paths": {
            "~/*": [
                "./app/*"
            ],
            "@/*": [
                "./app/*"
            ]
        }
    },
    "include": [
        "app/**/*.ts",
        "app/**/*.vue",
        "nuxt.config.ts"
    ]
}